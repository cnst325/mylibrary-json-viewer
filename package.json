{
  "name": "mylibrary-json-viewer",
  "version": "1.0.1",
  "description": "Cross-platform JSON viewer for MyLibrary Management app data",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": [
    "json",
    "viewer",
    "library",
    "electron",
    "backup"
  ],
  "author": "MyLibrary Management",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.mylibrary.jsonviewer",
    "productName": "MyLibrary JSON Viewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "identity": "Apple Distribution: JongMin Lee (2GA4LN286W)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    }
  }
}
